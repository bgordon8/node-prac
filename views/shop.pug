extends layout/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
                .grid 
                    each prod in prods
                        article.card.user-item
                            header.card__header 
                                h1.prod__title #{prod.title}
                            div.card__content
                                h2.card__content Sure
                                p.prod__description Here it is                               
                            .card__actions 
                                button.btn Add to Products
        else
            h1 No Products 
        